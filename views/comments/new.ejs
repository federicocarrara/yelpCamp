<% include ../partials/header %>
<div class="container">
  <h2 class="textCenter">Add new comment to <%= campground.name %></h2>
  <div class="row">
    <div class="edit">
      <form action="/campgrounds/<%= campground._id %>/comments" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Submit</button>
        </div>
        <a href="/campgrounds">Back</a>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer %>
